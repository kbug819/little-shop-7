<h1><center>Create A New Discount for <%= @merchant.name %></center></h1>

<%= form_with url: merchant_discounts_path(@merchant.id), method: :post do |f|%>
  <%= f.label :percentage %>
  <%= f.text_field :percentage %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%= f.submit "Submit" %>
<% end %>
