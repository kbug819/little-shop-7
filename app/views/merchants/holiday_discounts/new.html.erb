<h1><center>Create A New Holiday Discount for <%= @merchant.name %></center></h1>

<%= form_with url: merchant_bulk_discounts_path(@merchant.id), method: :post do |f|%>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, value: 30 %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity, value: 2 %>
  <%= f.submit "Submit" %>
<% end %>